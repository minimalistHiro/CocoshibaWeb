rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function ownerProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isOwner() {
      return isSignedIn() && (
        ownerProfile().isOwner == true ||
        ownerProfile().role == 'owner' ||
        (ownerProfile().roles is list && ownerProfile().roles.hasAny(['owner']))
      );
    }

    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isOwner();

      match /event_reservations/{userId} {
        allow read: if isOwner() || (isSignedIn() && request.auth.uid == userId);
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow delete: if isOwner() || (isSignedIn() && request.auth.uid == userId);
        allow update: if false;
      }
    }

    match /existing_events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    match /menus/{menuId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create, update, delete: if isSignedIn() && request.auth.uid == userId;

      match /event_reservations/{eventId} {
        allow read, create, update, delete: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }
}
